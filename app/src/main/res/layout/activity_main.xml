<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/framlayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="90%"
        app:layout_widthPercent="100%" />

    <RadioGroup
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/bottom"
        android:fadingEdge="none"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <RadioButton
            android:id="@+id/rb_main_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/background01"
            android:gravity="center"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:button="@null"
            android:drawableTop="@drawable/background02"
            android:gravity="center"
            android:text="特色" />


        <RadioButton
            android:id="@+id/rb_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="false"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:button="@null"
            android:drawableTop="@drawable/background03"
            android:gravity="center"
            android:text="订单" />

        <RadioButton
            android:id="@+id/rb_05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/background04"
            android:gravity="center"
            android:text="个人" />

    </RadioGroup>

    <View
        android:id="@+id/id_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        app:layout_heightPercent="2%"
        app:layout_widthPercent="15%" />

    <ImageView
        android:id="@+id/main_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@id/id_view"
        android:layout_centerInParent="true"
        android:src="@mipmap/bottom_btn_jiahao"
        app:layout_heightPercent="16%"
        app:layout_widthPercent="16%" />

</com.zhy.android.percent.support.PercentRelativeLayout>
